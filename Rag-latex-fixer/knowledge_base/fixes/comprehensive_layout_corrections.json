{
  "column_layout_corrections": {
    "two_column_documents": {
      "common_issues": [
        {
          "issue": "text_overflow_between_columns",
          "description": "Text or figures extending into adjacent column",
          "fixes": [
            {
              "type": "figure_placement",
              "solution": "Use [t] or [b] placement instead of [h]",
              "code": "\\\\begin{figure}[t]"
            },
            {
              "type": "column_break",
              "solution": "Force column break before problematic element",
              "code": "\\\\columnbreak"
            },
            {
              "type": "spanning_figure",
              "solution": "Use figure* environment to span both columns",
              "code": "\\\\begin{figure*}[t]"
            }
          ]
        },
        {
          "issue": "uneven_column_heights",
          "description": "Columns ending at different heights",
          "fixes": [
            {
              "type": "manual_balancing",
              "solution": "Add manual column breaks",
              "code": "\\\\columnbreak"
            },
            {
              "type": "balance_package",
              "solution": "Use balance package for automatic balancing",
              "code": "\\\\usepackage{balance}\\n\\\\balance"
            }
          ]
        },
        {
          "issue": "wide_equations_in_narrow_columns",
          "description": "Mathematical equations too wide for column",
          "fixes": [
            {
              "type": "equation_splitting",
              "solution": "Break equation across multiple lines",
              "code": "\\\\begin{multline}"
            },
            {
              "type": "spanning_equation",
              "solution": "Use equation* environment spanning both columns",
              "code": "\\\\begin{equation*}"
            },
            {
              "type": "smaller_font",
              "solution": "Reduce equation font size",
              "code": "{\\\\small $...$}"
            }
          ]
        }
      ],
      "best_practices": [
        "Use [t] placement for figures in two-column format",
        "Prefer figure* for wide figures",
        "Balance columns on final page",
        "Avoid [h] placement in narrow columns"
      ]
    },
    "single_column_adjustments": {
      "margin_corrections": [
        {
          "issue": "excessive_margins",
          "fix": "Use geometry package to adjust margins",
          "code": "\\\\usepackage[margin=1in]{geometry}"
        },
        {
          "issue": "inconsistent_margins",
          "fix": "Specify all margins explicitly",
          "code": "\\\\usepackage[top=1in, bottom=1in, left=1.25in, right=1.25in]{geometry}"
        }
      ],
      "line_spacing_fixes": [
        {
          "issue": "cramped_text",
          "fix": "Increase line spacing", 
          "code": "\\\\usepackage{setspace}\\n\\\\onehalfspacing"
        },
        {
          "issue": "excessive_spacing",
          "fix": "Use single spacing",
          "code": "\\\\singlespacing"
        }
      ]
    }
  },
  "page_layout_fixes": {
    "header_footer_corrections": {
      "missing_page_numbers": {
        "fix": "Add page numbering",
        "code": "\\\\pagestyle{plain}"
      },
      "inconsistent_headers": {
        "fix": "Use fancyhdr package for consistent headers",
        "code": "\\\\usepackage{fancyhdr}\\n\\\\pagestyle{fancy}\\n\\\\fancyhead[L]{Left Header}\\n\\\\fancyhead[C]{Center Header}\\n\\\\fancyhead[R]{Right Header}"
      },
      "inappropriate_header_content": {
        "fix": "Customize headers for document type",
        "academic_paper": "\\\\fancyhead[L]{Author Names}\\n\\\\fancyhead[R]{Short Title}",
        "thesis": "\\\\fancyhead[L]{Chapter Title}\\n\\\\fancyhead[R]{Page \\\\thepage}"
      }
    },
    "spacing_corrections": {
      "paragraph_spacing": [
        {
          "issue": "no_paragraph_indentation",
          "fix": "Enable paragraph indentation",
          "code": "\\\\setlength{\\\\parindent}{0.5in}"
        },
        {
          "issue": "excessive_paragraph_spacing",
          "fix": "Reduce space between paragraphs",
          "code": "\\\\setlength{\\\\parskip}{0pt}"
        }
      ],
      "section_spacing": [
        {
          "issue": "cramped_section_headers",
          "fix": "Increase space around sections",
          "code": "\\\\usepackage{titlesec}\\n\\\\titlespacing*{\\\\section}{0pt}{20pt}{10pt}"
        }
      ]
    },
    "float_placement_fixes": {
      "figures_tables_displacement": [
        {
          "issue": "figures_at_end_of_document",
          "description": "All figures appearing after references",
          "fixes": [
            {
              "type": "placement_specifiers",
              "solution": "Use more permissive placement options",
              "code": "\\\\begin{figure}[htbp!]"
            },
            {
              "type": "float_parameters",
              "solution": "Adjust float placement parameters",
              "code": "\\\\renewcommand{\\\\topfraction}{0.9}\\n\\\\renewcommand{\\\\bottomfraction}{0.9}\\n\\\\renewcommand{\\\\textfraction}{0.1}"
            },
            {
              "type": "force_placement",
              "solution": "Use H placement with float package",
              "code": "\\\\usepackage{float}\\n\\\\begin{figure}[H]"
            }
          ]
        },
        {
          "issue": "orphaned_captions",
          "description": "Captions separated from figures/tables",
          "fix": "Keep figure and caption together",
          "code": "Ensure \\\\caption is inside figure environment"
        }
      ]
    }
  },

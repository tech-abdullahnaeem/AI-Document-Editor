          {
            "type": "column_breaks",
            "solution": "Break long headers",
            "code": "Header\\\\\\\\Line 2"
          },
          {
            "type": "rotation",
            "solution": "Rotate table",
            "code": "\\\\usepackage{rotating}\\n\\\\begin{sidewaystable}"

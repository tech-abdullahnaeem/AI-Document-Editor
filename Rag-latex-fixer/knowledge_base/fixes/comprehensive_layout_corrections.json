    "hyphenation_corrections": {
      "overfull_hboxes": [
        {
          "issue": "words_extending_beyond_margin",
          "fixes": [
            {
              "type": "manual_hyphenation",
              "solution": "Add hyphenation hints",
              "code": "\\\\hyphenation{com-pu-ter}"
            },
            {
              "type": "break_assistance",
              "solution": "Add discretionary breaks",
              "code": "word\\\\-break"
            },
            {
              "type": "sloppy_setting",
